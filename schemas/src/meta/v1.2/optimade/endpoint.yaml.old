$schema: "https://json-schema.org/draft/2020-12/schema"
$id: "https://schemas.optimade.org/meta/v1.2/optimade/endpoint"
title: "OPTIMADE Endpoint Definition schema"
type: object
required: ["$id", "$schema", "title", "type", "properties","x-optimade-definition"]
properties:
  "$id":
    type: string
  "$schema":
    type: string
  title:
    type: string
  description:
    type: string
  properties:
    type: object
    additionalProperties:
      $$inherit: "property_definition"
      allOf:
        - $ref: "#/$defs/propdef"
        - required: ["title", "description"]
  type:
    type: string
additionalProperties: false
