#---*- Makefile -*-------------------------------------------------------

# Makelocal-output

PDF_FILES = ${RST_FILES:%.rst=%.pdf}

.PHONY: pdf

pdf: ${PDF_FILES}

%.pdf: %.rst
	pandoc $< -o $@

HTML_FILES = ${RST_FILES:%.rst=%.html}

.PHONY: html

html: ${HTML_FILES}

%.html: %.rst
	rst2html5.py -d --syntax-highlight=none --stylesheet=./tests/makefiles/style.css $< $@
